
#!/bin/bash

# Función para mostrar el banner
mostrar_banner() {
    echo -e "\e[1;31m"
    echo      "************************************"
    echo      "*                                  *"
    echo      "*          ~M A X S C A N~         *"
    echo      "*                                  *"
    echo      "************************************"
    echo -e "\e[0m"
}

#!/bin/bash

# Función para ejecutar el primer script
ejecutar_script1() {
    bash script1.sh
}

# Función para ejecutar el segundo script
ejecutar_script2() {
    bash script2.sh
}

# Función para actualizar los scripts desde GitHub
actualizar_scripts() {
    git pull origin master
}

# Mostrar las opciones al usuario
mostrar_menu() {
    echo "Seleccione una opción:"
    echo "1. Check"
    echo "2. Checkvuln"
    echo "3. Update"
    echo "4. Salir"
}

# Ciclo principal del programa
while true; do
    mostrar_menu
    read opcion

    case $opcion in
        1) curl -O https://raw.githubusercontent.com/Sr-Mxr/check-of-system-/master/check-of-system- && /bin/bash check-of-sistem- ;;
        2) curl -O https://raw.githubusercontent.com/Sr-Mxr/checkvuln/master/checkvuln && /bin/bash checkvuln ;;
        3) git pull origin main ;;
        4) break ;;
        *) echo "Opción no válida. Por favor, seleccione una opción válida." ;;
    esac
done
